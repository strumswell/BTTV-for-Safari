{
    "manifest_version": 2,
    "default_locale": "en",

    "name": "__MSG_extension_name__",
    "description": "__MSG_extension_description__",
    "version": "1.0",

    "icons": {
        "48": "images/48.png",
        "64": "images/64.png",
        "96": "images/96.png",
        "128": "images/128.png",
        "256": "images/256.png",
        "512": "images/512.png"
    },

    "content_scripts": [{
        "js": [ "content.js" ],
        "matches": [ "https://*.twitch.tv/*" ]
    }],

    "browser_action": {
        "default_icon": {
            "16": "images/toolbar-icon-16.png",
            "19": "images/toolbar-icon-19.png",
            "32": "images/toolbar-icon-32.png",
            "38": "images/toolbar-icon-38.png"
        }
    },

    "permissions": [ ]
}
